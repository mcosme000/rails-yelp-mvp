<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-2 row-colds-lg-4 g-4">
    <div class="card-container">
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="https://images.unsplash.com/photo-1615546099385-d537225da73b?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1182&q=80" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= @restaurant.name %></h5>
              <p><%= @restaurant.address %></p>
              <p class="tag"><%= @restaurant.category %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= link_to "Go back to restaurants", restaurants_path, class: "btn btn-secondary" %>

</div>
